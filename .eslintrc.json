{
    "extends": ["eslint:recommended", "google"],
    "parserOptions": { "ecmaVersion": 6 },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "new-cap": ["error", {"capIsNewExceptionPattern": "^express"}],
        "comma-dangle": ["error", "never"],
        "require-jsdoc": ["off"],
        "no-useless-escape": ["off"]
    }, 
    "env": {
        "node": true,
        "browser": true,
        "mocha": true,
        "es6": true
    },
    "globals": {
      "axios": true
    }
}